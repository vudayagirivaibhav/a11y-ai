{
  "name": "@a11y-ai/core",
  "version": "0.0.0",
  "description": "AI-powered accessibility auditor built on axe-core + AI analysis.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.cjs"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "import": "./dist/testing.mjs",
      "require": "./dist/testing.cjs"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "lint": "eslint src",
    "test": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@a11y-ai/ai-providers": "workspace:*",
    "@a11y-ai/rules": "workspace:*",
    "axe-core": "^4.10.0"
  },
  "peerDependencies": {
    "jsdom": "^24.0.0",
    "playwright": "^1.41.0",
    "puppeteer": "^22.0.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    },
    "puppeteer": {
      "optional": true
    }
  },
  "devDependencies": {
    "jsdom": "^24.0.0"
  }
}
