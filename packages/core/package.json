{
  "name": "a11y-ai",
  "version": "0.0.0",
  "description": "AI-powered accessibility auditor built on axe-core + AI analysis.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.cjs"
    }
  },
  "bin": {
    "a11y-ai": "./bin/a11y-ai.mjs"
  },
  "files": ["dist", "bin"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "axe-core": "^4.10.0"
  },
  "peerDependencies": {
    "jsdom": "^24.0.0",
    "playwright": "^1.41.0",
    "puppeteer": "^22.0.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    },
    "puppeteer": {
      "optional": true
    }
  },
  "devDependencies": {
    "jsdom": "^24.0.0"
  }
}
